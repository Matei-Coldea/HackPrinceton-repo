{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build financeApp (Simulator)",
      "type": "shell",
      "command": "xcodebuild",
      "args": [
        "-project", "${workspaceFolder}/HackPrinceton/frontend/financeApp.xcodeproj",
        "-scheme", "financeApp",
        "-configuration", "Debug",
        "-sdk", "iphonesimulator",
        "-destination", "platform=iOS Simulator,name=iPhone 15,OS=17.6",
        "-derivedDataPath", "${workspaceFolder}/.build/financeApp",
        "clean", "build"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [
        "$msCompile"
      ]
    },
    {
      "label": "Run financeApp on Simulator",
      "type": "shell",
      "dependsOn": "Build financeApp (Simulator)",
      "command": "/bin/bash",
      "args": [
        "-lc",
        "open -a Simulator || true; \nAPP_PATH=\"${workspaceFolder}/.build/financeApp/Build/Products/Debug-iphonesimulator/financeApp.app\"; \nif [ -d \"$APP_PATH\" ]; then \n  xcrun simctl install booted \"$APP_PATH\" && xcrun simctl launch booted com.hackPrinceton.financeApp || true; \nelse \n  echo \"ERROR: Built app not found at $APP_PATH\"; exit 1; \nfi"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
